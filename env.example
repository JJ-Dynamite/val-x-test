# Kits AI CLI Environment Variables
# Copy this file to .env and fill in your actual values

# Required: Your Kits AI API Key
# Get yours from: https://docs.kits.ai/api-reference
KITS_API_KEY=your_api_key_here

# Optional: Set log level for debugging
# Values: error, warn, info, debug
LOG_LEVEL=info

# Optional: API base URL (only change if using a different endpoint)
KITS_API_BASE_URL=https://arpeggi.io/api/kits/v1

# Optional: Default output directory for processed files
DEFAULT_OUTPUT_DIR=./output

# Optional: Maximum file size for uploads (in MB)
MAX_FILE_SIZE=100

# Optional: Request timeout (in milliseconds)
REQUEST_TIMEOUT=300000

# Optional: Job polling interval (in milliseconds)
POLLING_INTERVAL=5000

# Optional: Maximum polling attempts before timeout
MAX_POLLING_ATTEMPTS=60 